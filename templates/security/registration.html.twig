{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscrivez vous</h1>

    {{ form_start(form) }}
    
    {{ form_row(form.pseudo, {'label': 'Votre pseudo','attr': {'placeholder': 'Votre pseudo ...'}}) }}
    {{ form_row(form.mdp, {'label': 'mot de passe','attr': {'placeholder': 'Votre mot de passe ...'}}) }}
    {{ form_row(form.confirm_mdp, {'label': 'confirmation mot de passe','attr': {'placeholder': 'Confirmez votre mot de passe ...'}}) }}
    {{ form_row(form.email, {'label': 'Email','attr': {'placeholder': 'Votre adresse mail ...'}}) }}

    <button type="submit" class="btn btn-success">Inscription</button>
    <img class="image" src="/image/neptune1.jpg" alt="">
    {{ form_end(form) }}
{% endblock %}